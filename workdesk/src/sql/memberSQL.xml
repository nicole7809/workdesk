<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
	
	<!-- insert -->
	<insert id="insertMember" parameterType="memberDTO">
		insert into MEMBER values (#{id},#{password},#{name},#{birthday},
									#{department},#{job},#{join_date},#{join_date},
									#{level},#{email})
	</insert>

	<!-- id/pw 맞는지 확인    //  아이디 중복확인 -->
	<select id="userCheck" resultType="int" parameterType="memberDTO">
		select count(*) from MEMBER where id=#{id} 
		<if test="password != null">
			and password = #{password}
		</if>
	</select>

	<select id="member" resultType="memberDTO" parameterType="String" >
		select * from MEMBER where id=#{value}
	</select>
	
	<update id="updateMember" parameterType="memberDTO">
		update MEMBER 
		<set>
		<if test="passwd != null">password=#{password},</if>
		<if test="name != null">name=#{name},</if>
		<if test="email != null">email=#{email},</if>
		<if test="job != null">job=#{job}</if>
		</set>
		where id=#{id}
	</update>
	<!-- 
	<delete id="deleteMember" parameterType="String"> 
		delete from MEMBER where id=#{value}
	</delete> -->

</mapper>

